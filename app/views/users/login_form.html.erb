<div class="main">
  <div class="container">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">

          <%= form_tag("/login") do %>
            <div class="form-group">
              <label>email</label>
              <input name="email" class="form-control">
            </div>
            <div class="form-group">
              <label>パスワード</label>
              <input name="password" class="form-control">
            </div>
            <%= submit_tag 'ログイン', class:'btn btn-info' %>
          <% end %> 
        </div>
      </div>  

  </div>
</div>

