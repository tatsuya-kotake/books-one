<div class="main">
    <div class="books-index">
    <% @books.each do |book| %>
      <div class="book-index">
          
        <% if book.reviewed_id %>
          <%= link_to ("/reviews/#{book.reviewed_id}") do %> 
          <img src="<%= book.img_url %>" alt="" >
          <% end %>
        <% else %>
          <%= link_to ("/books/#{book.id}") do %>
          <img src="<%= book.img_url %>" alt="" >
          <% end %>
        <% end %>

      </div>
    <% end %>
  </div>
</div>

