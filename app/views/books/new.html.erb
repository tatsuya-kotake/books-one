<div class="main">
  <div class="container">
    <div class="book-new">
        <div class="panel panel-default">
          <div class="panel-heading text-center">
            <img src="<%= @book.img_url %>" alt="" >
          </div>
          <div class="panel-body">
            <p class="book-title">著書名 :<%= @book.title %></p>
            <p class="book-title">著者名 :<%= @book.author %></p>
            <p class="book-title">出版社 :<%= @book.publisher %></p>
          </div>
        </div>

        <div class="btn-tab">
         <%= link_to("/books/#{@book.isbn}/create",:method => :post) do %>
           <button type="button" class="btn btn-info">本棚に登録</button>
         <% end %>   
  
         <%= link_to("/reviews/#{@book.isbn}/index") do %>
           <button type="button" class="btn btn-info">書評を見る</button>
         <% end %>   
        </div>
    </div>
          
  </div>
</div>
      