<div class="main ">
  <div class="container">
    <div class="row">
      <div class="text-center">
        <%= form_tag("/books/search", method: :get, class: 'form-inline',) do %>
          <div class="form-group">
            <%= text_field_tag :title, @title, class: 'form-control input-lg', placeholder: "キーワードを入力", size: 40 %>
            
          </div>
          <%= submit_tag '本を検索', class:'btn btn-info btn-lg' %>
          <% end %>
      </div>
    </div>
  </div>
  <div class="book-result">
    <%= render 'book' %>
  </div>
</div>

  



