<div class="main">
  <div class="container">
    <div class="book-show">
        <div class="book_img">
          <img src="<%= @book.img_url %>" alt="本の画像">
        </div>
        <div class="book_info">
            <h3><%= @book.title %></h3>
            <ul>著者:<%= @book.author %></ul>
            <ul>出版:<%= @book.publisher %></ul>
        </div>
    </div>
    <div class="review-show">
      
      <ul>まとめタイトル</ul>
        <div class="review-content_title">
            <ul><%= @review.content_title %></ul>
        </div>
      <ul>まとめ</ul>
        <div class="review-content">
          <ul><%= @review.content %></ul>
        </div>
    </div>
    
    <% if @current_user.id == @book.user_id %>
      <div class="btn-tab">
        <div class="other-review-button">
         <%= link_to("/reviews/#{@book.isbn}/index") do %>
           <button type="button" class="btn btn-info">他の書評を見る</button>
         <% end %>             
        </div>
        <div class="edit-button">
          <%=link_to("/reviews/#{@review.book_id}/edit") do %>
              <button type="button" class="btn btn-info" >編集する</button>
          <% end %>
        </div>
      </div>
    <% end %>
    
    

    
  </div>
</div>